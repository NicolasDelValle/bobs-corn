generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Config {
  id          String  @id @default(uuid())
  key         String  @unique
  value       String
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("config")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String // Hasheada
  name     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]

  @@index([email])
  @@map("users")
}

model Session {
  id               String   @id @default(uuid())
  userId           String
  accessToken      String   @unique
  refreshToken     String   @unique
  expiresAt        DateTime
  refreshExpiresAt DateTime
  isRevoked        Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([accessToken])
  @@index([refreshToken])
  @@index([expiresAt])
  @@map("sessions")
}

model Client {
  id        String @id @default(uuid())
  sessionId String @unique

  createdAt  DateTime @default(now())
  lastActive DateTime @updatedAt

  purchases  Purchase[]
  rateLimits RateLimit[]

  @@index([sessionId])
  @@map("clients")
}

model Purchase {
  id              String   @id @default(uuid())
  clientId        String
  paymentMethodId String
  purchasedAt     DateTime @default(now())

  client        Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  paymentMethod PaymentMethod @relation(fields: [paymentMethodId], references: [id], onDelete: Cascade)

  @@index([clientId, purchasedAt(sort: Desc)])
  @@index([paymentMethodId])
  @@map("purchases")
}

model PaymentMethod {
  id             String  @id @default(uuid())
  name           String  @unique
  identifierHash String  @unique // Hash del número de tarjeta/cuenta para privacidad
  lastFourDigits String? // Últimos 4 dígitos para referencia (opcional)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  purchases  Purchase[]
  rateLimits RateLimit[]

  @@index([identifierHash])
  @@map("payment_methods")
}

model RateLimit {
  id              Int      @id @default(autoincrement())
  clientId        String
  paymentMethodId String?
  windowStart     DateTime
  requestCount    Int      @default(1)
  createdAt       DateTime @default(now())

  client        Client         @relation(fields: [clientId], references: [id], onDelete: Cascade)
  paymentMethod PaymentMethod? @relation(fields: [paymentMethodId], references: [id], onDelete: Cascade)

  @@unique([clientId, paymentMethodId, windowStart])
  @@index([clientId, windowStart(sort: Desc)])
  @@index([paymentMethodId, windowStart(sort: Desc)])
  @@map("rate_limits")
}
