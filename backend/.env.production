# Application
NODE_ENV=production
PORT=5000
APP_NAME=bobs-corn-api
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@production-host:5432/bobs_corn_prod?schema=public&connection_limit=20&sslmode=require

# Security
SESSION_SECRET=${SESSION_SECRET}

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn
LOG_FORMAT=combined

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/app/uploads
